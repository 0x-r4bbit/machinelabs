    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "typeRoots": [
    "./node_modules/@types"
